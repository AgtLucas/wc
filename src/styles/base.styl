@alias
  fs font-size
  ff font-family
  fr font-range
  fw font-weight
  bg background

html
  box-sizing border-box

*,
*:before,
*:after
  box-sizing inherit

body
  fs responsive 14px 21px
  fr 420px 1280px
  line-height 1.5

.wrapper
  lost-utility clearfix
  lost-center 1000px
  padding 0 20px

input
  display block

.input__field
  margin 10px 0
